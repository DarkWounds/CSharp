<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PescuirtTel.MainPage">

    <StackLayout>
        <Grid Padding="0" VerticalOptions="Start" HorizontalOptions="Center" Margin="0,40,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition Height="65" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="130" />
            </Grid.ColumnDefinitions>
            <!-- Buttons Row -->
            <Button Grid.Row="0" Grid.Column="1" Text="1" HeightRequest="130" WidthRequest="130" FontSize="14" BackgroundColor="LightGray" />
            <Button Grid.Row="0" Grid.Column="3" Text="2" HeightRequest="130" WidthRequest="130" FontSize="14" BackgroundColor="LightGray" />
            <Button Grid.Row="0" Grid.Column="5" Text="3" HeightRequest="130" WidthRequest="130" FontSize="14" BackgroundColor="LightGray" />
            <Button Grid.Row="0" Grid.Column="7" Text="4" HeightRequest="130" WidthRequest="130" FontSize="14" BackgroundColor="LightGray" />
            <!-- Rich Text Row INSIDE the grid, using Grid.Row="1" -->
            <Label Grid.Row="1" Grid.Column="0" WidthRequest="130" HeightRequest="65" BackgroundColor="LightGray" Margin="0,30,0,0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="E" FontAttributes="Bold" TextColor="Red"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Grid.Row="1" Grid.Column="1" WidthRequest="130" HeightRequest="65" BackgroundColor="LightGray" Margin="0,30,0,0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="A" FontAttributes="Bold" TextColor="Red"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Grid.Row="1" Grid.Column="3" WidthRequest="130" HeightRequest="65" BackgroundColor="LightGray" Margin="0,30,0,0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="B" FontAttributes="Bold" TextColor="Red"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Grid.Row="1" Grid.Column="5" WidthRequest="130" HeightRequest="65" BackgroundColor="LightGray" Margin="0,30,0,0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="C" FontAttributes="Bold" TextColor="Red"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Grid.Row="1" Grid.Column="7" WidthRequest="130" HeightRequest="65" BackgroundColor="LightGray" Margin="0,30,0,0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="D" FontAttributes="Bold" TextColor="Red"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>
    </StackLayout>
</ContentPage>